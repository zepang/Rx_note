function setHeroSections(){var width=$("#JelloSizer").width(),marginProperty="margin-left",margin;$("html").attr("dir")==="rtl"&&(marginProperty="margin-right");$(window).width()>width?(margin=($("body").width()-width)/2,$("div.heroSection").width(width+"px").css(marginProperty,"-"+margin+"px").css("padding-left",margin+"px").css("padding-right",margin+"px")):$("div.heroSection").width(width+"px").css(marginProperty,"0").css("padding-left","0").css("padding-right","0")}$(document).ready(function(){setHeroSections()});$(window).resize(function(){setHeroSections()});